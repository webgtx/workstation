# Swaylock config file
# Set the background color to gray
background-color #888888

# Set the color of the text and indicators to red
font-color #FF0000
indicator-color #FF0000

# Set the font and font size
font-size 25
font-family DejaVu Sans Mono

# Set the radius of the indicator
indicator-radius 150

# Set the position of the clock
clock-pos 1500 800

# Set the position and size of the date
date-pos 1500 900
date-size 20

# Set the position and size of the unlock indicator
unlock-indicator-pos 800 1000
unlock-indicator-size 50

# Set the position and size of the caps lock indicator
caps-lock-indicator-pos 900 1000
caps-lock-indicator-size 50

